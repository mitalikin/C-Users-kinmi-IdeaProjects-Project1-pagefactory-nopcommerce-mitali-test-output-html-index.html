<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Sanity suite" verbose="1" >
    <groups>
        <run>
            <include name="sanity"/>
            <include name="regression"/>
        </run>
    </groups>
    <listeners>
        <listener class-name="com.nopcommerce.demo.customlisteners.CustomListeners"/>
        <listener class-name="org.uncommons.reportng.HTMLReporter"/>
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
    </listeners>
    <test name="sanity Test" >
        <classes>
            <class name="com.nopcommerce.demo.testsuite.ComputerPageTest"/>
            <class name="com.nopcommerce.demo.testsuite.ElectronicsTest"/>
            <class name="com.nopcommerce.demo.testsuite.HomePageTest"/>
        </classes>
    </test>
</suite>